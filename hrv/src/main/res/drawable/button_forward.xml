<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081"/>  <!-- Цвет фона при нажатии -->
            <corners android:radius="8dp"/>  <!-- Закругленные углы (необязательно) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/selectableItemBackground"/>  <!-- Цвет фона в обычном состоянии -->
            <corners android:radius="8dp"/>  <!-- Закругленные углы (необязательно) -->
        </shape>
    </item>
</selector>